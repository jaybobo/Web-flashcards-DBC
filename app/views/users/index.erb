<div class="container">
  <div class="row top">
    <div class="col-md-4">
      <h2>Hello, <%= @user.user_name %></h2>
    </div>
    <div class="col-md-4">
      <h2>My Stats</h2>
      #
    </div>
    <div class="col-md-4">
      <h2>Global Stats</h2>
      #
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-6 .col-md-offset-3">
      <h2>Games, click to play</h2>
      </div>
    </div>  
    <% Deck.all.each do |deck| %>
    <div class="row">
      <div class="col-md-6 .col-md-offset-3">
        <a href="/decks/<%= deck.id %>"><h4 class="game-list"><%= deck.name %></h4></a>
      </div>
    </div>    
    <% end %>
  </div>
</div>
