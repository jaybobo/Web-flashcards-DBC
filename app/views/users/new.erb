<div class="container">
  <div class="jumbotron">
    <h1> Welcome!</h1>
    <h3>Create an Account for Sparta Cards!</h3>
  </div>
    <br>

    <form role="form" action="/users" method="post">
      <div class="form-group create-new">
        <label>Name</label>
        <input type="name" class="form-control" name="user[user_name]" placeholder="Enter your name">
      </div>
      <div class="form-group create-new">
        <label>Email address</label>
        <input type="email" class="form-control" name="user[user_email]" placeholder="Enter your email">
      </div>
      <div class="form-group create-new">
        <label>Password</label>
        <input type="password" class="form-control" name="user[password]"  placeholder="Password">
        <input type="password" class="form-control" name="user[password_confirmation" placeholder="Confirm Password">
      </div>
      <button type="submit" class="btn btn-primary btn-lg">Submit</button>
    </form>
</div>
